{
  "name": "electron-react",
  "version": "0.1.0",
  "private": true,
  "description": "Electron and React App",
  "author": "Gaurav Sharma",
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "dev": "nf start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "ebuild": "yarn build && yarn dist"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^21.2.0",
    "foreman": "^3.0.1"
  },
  "build": {
    "productName": "Electron React App",
    "appId": "com.gs.electronreact",
    "files": [
      "build/**/*",
      "electron/*"
    ]
  }
}